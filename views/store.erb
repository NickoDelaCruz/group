<h1><%= @store.name %></h1>
<br>

<ol>
  <% @store.brands.each do |brand| %>
    <li> <%= brand.name %> <%= "$#{'%.2f' % (brand.price.to_f/100)}" %></li>
  <% end %>
</ol>
<br>
<form action="/store_main/<%= @store.id %>/brands" method="post">
  <label for="brand">Brand:</label>
  <select id='brand' name='brand' type='text'>
    <% @brands.each do |brand| %>
      <option value="<%= brand.id%>"> <%= brand.name %> </option>
    <% end %>
  </select>

  <button type="submit">ADD</button>
</form>

<a href="/brand_main">|BRANDS|</a>
